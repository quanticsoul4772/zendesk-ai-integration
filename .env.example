# Zendesk API credentials
ZENDESK_EMAIL=your_email@company.com
ZENDESK_API_TOKEN=your_zendesk_api_token
ZENDESK_SUBDOMAIN=your_zendesk_subdomain

# AI API keys (at least one is required)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# MongoDB configuration
# For local MongoDB instance
MONGODB_URI=mongodb://localhost:27017
# For MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=zendesk_analytics
MONGODB_COLLECTION_NAME=ticket_analysis

# Slack integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-slack-webhook-url

# Security settings
WEBHOOK_SECRET_KEY=your_secure_random_key_here
ALLOWED_IPS=127.0.0.1,10.0.0.0/24

# Feature flags
DISABLE_TAG_UPDATES=true

# Caching settings
VIEWS_CACHE_TTL_SECONDS=900
TICKETS_CACHE_TTL_SECONDS=300
USER_CACHE_TTL_SECONDS=1800

# Performance settings
MAX_WORKER_THREADS=5
BATCH_SIZE=10
SHOW_PROGRESS_BAR=true

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=zendesk_ai.log
